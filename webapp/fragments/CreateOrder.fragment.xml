<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified">
	<Dialog id="idCreateOrder" title="Create Sales Order">
        <content>
            <VBox>
                <Label text="Sales Order#"/>
                <Input value="{createOrd>/salesOrd}" />
                <Label text="Sales Order Type"/>
                <Input value="{createOrd>/salesOrdType}"/>
                <Label text="Overall Delivery Status"/>
                <Input value="{createOrd>/overallDelivStat}"/>
                <Label text="Purchase Order By Customer"/>
                <Input value="{createOrd>/purchaseOrdByCust}"/>
                <Label text="Sales District"/>
                <Input value="{createOrd>/salesDist}"/>
            </VBox>    
        </content>
        <beginButton>
            <Button text="Submit" press="onSubmitPressed"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelPressed"/>
        </endButton>
	</Dialog>
</core:FragmentDefinition>