<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified">
	<Dialog id="idUpdateOrder" title="Update Sales Order">
        <content>
            <VBox>
                <Label text="Sales Order#"/>
                <Input value="{updateOrd>/SalesOrder}" />
                <Label text="Sales Order Type"/>
                <Input value="{updateOrd>/SalesOrderType}"/>
                <Label text="Overall Delivery Status"/>
                <Input value="{updateOrd>/OverallDeliveryStatus}"/>
                <Label text="Purchase Order By Customer"/>
                <Input value="{updateOrd>/PurchaseOrderByCustomer}"/>
                <Label text="Sales District"/>
                <Input value="{updateOrd>/SalesDistrict}"/>
            </VBox>    
        </content>
        <beginButton>
            <Button text="Submit" press="onSubmitUpPressed"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelUpPressed"/>
        </endButton>
	</Dialog>
</core:FragmentDefinition>